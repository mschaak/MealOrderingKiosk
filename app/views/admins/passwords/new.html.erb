<h1>Forgot Password - LOOK HERE!</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, id: 'login' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <br />
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send Password Reset Email" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
